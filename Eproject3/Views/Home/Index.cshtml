@model IEnumerable<Eproject3.Models.Recipes>
@using Eproject3.Models
@{
    ViewBag.Title = "Home Page";
    var contests = (IEnumerable<Contest>)ViewBag.contests;
    var tips = (IEnumerable<Tips>)ViewBag.Tips;
}
<style>
    img{
        width:100px;
        height:80px;
    }
</style>
<a class="alert-info">@ViewBag.done</a>
<div class="container">
    <div class="infor">
        @*phan nay la phan gioi thieu thang James Thew nhe Tien*@
        James Thew is famous in Sweden and around the world thanks to head chef Magnus Nilsson. Voted among the worlds 50 best restaurants in 2012, Faviken is in north of Stockholm and offers accommodations for diners and travelers. As this location experiences long winters, Nilsson is able to get the best out of the long-stored vegetables and meat. He juggles himself from being a hunter, a fisherman, a farmer and an outstanding chef. Diners savor specialties like the 18 month-old scallops served (like most of the dishes) with wine. Nilsson has much to share in the culinary world and his innovations have opened doors to this part of Sweden were food enthusiasts cannot wait for a try.
        <img src="~/images/unnamed.jpg" style="width:100px;height:90px" />
    </div>
    <div class="content-img">
    </div>
    <div class="content">
        <div class="container ">
            @*Cho nay hien thi Recipes,An vao thi hien detal no ra,Dao Ngoc Hai lo phan nay*@
            Recipes
            <div class="box-item relative">
                @foreach (var items in Model)
                {
                <a href="/Recipes/Details/@items.id">
                    <div class="item">
                        <div class="blur-hover">
                            <h1>@items.Title</h1>
                        </div>
                        <img src="~/images/@items.Img.Split(',').First()">
                    </div>
                </a>
  
                }
            </div>
        </div>
        <div class="container">
            @*Cho nay hien thi Tips,An vao thi hien detal no ra,Dao Ngoc Hai lo phan nay*@
            Tips
            <div class="box-item relative">
                @foreach (var items in tips)
                {
                <a href="/Tips/Details/@items.id">
                    <div class="item">
                        <div class="blur-hover">
                            <h1>@items.Content</h1>
                        </div>
                        <img src="~/images/@items.Img.Split(',').First()">
                    </div>
                </a>

                }
            </div>
        </div>
        <div class="container">
            @*Cho nay hien thi Contest,An vao thi hien detal no ra,Tran Huu Tu lo phan nay*@
            Contest
            <div class="box-item relative">
                @foreach (var items in contests)
                {
                    <div class="item">
                        <div class="blur-hover">
                            Starting Date:@items.C_Time
                        </div>
                        <div class="blur-hover">
                            Expired Date:@items.exp_time
                        </div>
                        <a href="/Contests/Details/@items.id">
                            <img src="~/images/@items.img" />
                        </a>                       
                    </div>
                }
            </div>
        </div>
    </div>
</div>