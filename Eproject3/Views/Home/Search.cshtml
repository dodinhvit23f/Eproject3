@using Eproject3.Models
@{
    ViewBag.Title = "Search";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var tips = (IEnumerable<Tips>)ViewBag.tips;
    var recipes = (IEnumerable<Recipes>)ViewBag.recipes;
    var count = 0;
}

<h2>Search</h2>
<form method="get" action="/Home/Search">
    Tips/Recipes:<input value="@ViewBag.kw" name="kw" required type="text" /><button>Search</button>
</form>
<div class="content">
    Recipes
    <div class="container">
        @*Cho nay hien thi Recipes,An vao thi hien detal no ra,Dao Ngoc Hai lo phan nay*@
        @foreach (var items in recipes)
        {
            if (@count == 3)
            {
                <div class="row"> </div>
            }
            <a href="/Recipes/Details/@items.id">
                <div class="col-sm-3 box-item relative">
                    <div class="item">
                        <div class="blur-hover">
                            <h1>@items.Title</h1>
                        </div>
                        <img style="width:100px;height:100px" src="~/images/@items.Img.Split(',').First()">
                    </div>
                </div>
            </a>
            if (++@count == 3)
            {

            }
        }
    </div>
</div>
<div class="content">
    <div class="container">
        @*Cho nay hien thi Tips,An vao thi hien detal no ra,Dao Ngoc Hai lo phan nay*@
        Tips
        @foreach (var items in tips)
        {
            <div class="box-item relative">
                <a href="/Tips/Details/@items.id">
                    <div class="item">
                        <div class="blur-hover">
                            <h1>@items.Content</h1>
                        </div>
                        <img style="width:100px;height:100px" src="~/images/@items.Img.Split(',').First()">
                    </div>
                </a>
            </div>
        }
    </div>
</div>
