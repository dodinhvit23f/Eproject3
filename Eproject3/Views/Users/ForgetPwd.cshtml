
@{
    ViewBag.Title = "ForgetPwd";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="col-sm-6 action-form">
    <div class="center">
        <h2>ForgetPwd</h2>
    </div>
    <a style="color:red">@ViewBag.err</a>
    <form method="post" action="/Users/ForgetPwd">
        <div class="box-radius-border">
            <label for="email"><b>Phone:</b></label>
            <input type="text" placeholder="Enter Phonenumber" name="phones" pattern="[0-9]+" required>
        </div>
        <div class="col-sm-2">

        </div>
        <div class="col-sm-10">
            <button type="submit" class="btn">Send</button>
        </div>
        
    </form>

</div>